{% extends "layout.html.twig" %}

{% block content %}
    <h1 class="text-center mt-5">
        Category        
            
    </h1>
    <!-- Swiper -->
    {# <h2>Comedy</h2> #}
    {% for category in categories %}
        <section class="swiper mySwiper mb-5 mx-5">
            <h2 class="mb-5">
                {{ category.title }}
            </h2>
            <div class="swiper-wrapper">
                {% for serie in series|filter(serie => category.id == serie.category_id) %}
                    <div class="swiper-slide d-flex flex-column position-relative">
                        <img class="img-fluid" src="/uploads/{{ serie.image }}" alt="">
                        <a class="stretched-link" href="/serie/show?id={{ serie.id }}">
                            {{ serie.title }}
                        </a>

                    </div>

                {% endfor %}
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
            </div>
        </section>
    {% endfor %}

            <!-- Swiper JS -->
            <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

            <!-- Initialize Swiper -->
            <script>
		var swiper = new Swiper(".mySwiper", {
slidesPerView: 3,
centerMode: true,
centerPadding: '20px',
spaceBetween: 30,
navigation: {
nextEl: ".swiper-button-next",
prevEl: ".swiper-button-prev"
},
breakpoints: {
320: {
slidesPerView: 1,
spaceBetween: 20
},
480: {
slidesPerView: 1,
spaceBetween: 20
},
768: {
slidesPerView: 2,
spaceBetween: 40
},
1024: {
slidesPerView: 3,
spaceBetween: 50
},
1400: {
slidesPerView: 4,
spaceBetween: 50
}
}
});
	</script>

        {% endblock %}
        