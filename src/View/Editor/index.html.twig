{% extends 'layout.html.twig' %}
{% block content %}
<h1 class="text-align">Serial Editor</h1>
<p>Add, modify, delete,...</p>

<form action="" method="POST" enctype="multipart/form-data">
  <div class="row mb-3">
    <label for="category" class="col-sm-2 col-form-label">Category</label>
    <div class="col-sm-10">
      <select class="form-select" aria-label="Default select example">
  <option selected>Select category</option>
  <option value="1">Japanese animation</option>
  <option value="2">Horror</option>
  <option value="3">Comedy</option>
  <option value="4">Thriller</option>
</select>
    </div>
  </div>

  <div class="row mb-3">
    <label for="title_serie" class="col-sm-2 col-form-label">Title serie</label>
    <div class="col-sm-10">
      <input type="title_serie" class="form-control" id="title_serie" placeholder="Select serie">
    </div>
  </div>

    <div class="row mb-3">
  <label for="description" class="col-sm-2 col-form-label">Description</label>
  <div class="col-sm-10">
  <input type="title_serie" class="form-control" id="title_serie">
  <label for="description" class="form-label"</label>
  <textarea class="form-control" id="description" ></textarea>  
</div>

<div class="row mb-3">
<label for="imageUpload" class="col-sm-2 col-form-label">Picture</label> 
<div class="col-sm-10">   
<input type="file" class="form-control" id="imageUpload" placeholder="Upload your picture"/>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
<button class="btn btn-primary me-md-2" type="button">Send</button>
</div>
  
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
  <button class="btn btn-primary me-md-2" type="button">Save</button>
  <button class="btn btn-primary" type="button">Delete</button>
</div>




{% endblock %}
